{
  "name": "calendario-fiscal-mx",
  "version": "1.0.0",
  "type": "module",
  "description": "Calendario completo de obligaciones fiscales mexicanas del SAT con fechas lÃ­mite y recordatorios",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "microbundle --no-compress",
    "build:prod": "microbundle",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "prepare": "npm run build",
    "prepublishOnly": "npm run test && npm run lint && npm run build:prod"
  },
  "keywords": [
    "calendario",
    "fiscal",
    "mexico",
    "sat",
    "obligaciones",
    "declaraciones",
    "vencimientos",
    "iva",
    "isr",
    "resico",
    "fechas-limite",
    "recordatorios"
  ],
  "author": "Gerardo Lucero",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/GerardoLucero/calendario-fiscal-mx.git"
  },
  "bugs": {
    "url": "https://github.com/GerardoLucero/calendario-fiscal-mx/issues"
  },
  "homepage": "https://github.com/GerardoLucero/calendario-fiscal-mx#readme",
  "engines": {
    "node": ">=14.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@babel/preset-env": "^7.25.4",
    "@eslint/js": "^8.57.0",
    "babel-jest": "^29.7.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "microbundle": "^0.15.1"
  },
  "dependencies": {},
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.{js,ts}",
      "!src/**/*.test.{js,ts}",
      "!src/**/*.spec.{js,ts}"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "transform": {
      "^.+\\.[jt]sx?$": "babel-jest"
    }
  }
}
